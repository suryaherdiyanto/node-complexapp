extends ../master.pug

block content
    .container.py-md-5
        .row.align-items-center
            .col-lg-7.py-3.py-md-5
                h1.display-3 Remember Writing?
                    p.lead.text-muted Are you sick of short tweets and impersonal &ldquo;shared&rdquo; posts that are reminiscent of the late 90&rsquo;s email forwards? We believe getting back to actually writing is the key to enjoying the internet again.
            .col-lg-5.pl-lg-5.pb-3.py-lg-5
                if success[0]
                    +alert(success[0])
                
                if error[0]
                    +alert(error[0], 'danger')
                    
                form#registration-form(action='/register-user' method='POST')
                    .form-group
                    label.text-muted.mb-1(for='username-register')
                        small Username
                    input#username-register.form-control(name='username' type='text' placeholder='Pick a username' autocomplete='off')
                    .form-group
                    label.text-muted.mb-1(for='email-register')
                        small Email
                    input#email-register.form-control(name='email' type='text' placeholder='you@example.com' autocomplete='off')
                    .form-group
                    label.text-muted.mb-1(for='password-register')
                        small Password
                    input#password-register.form-control(name='password' type='password' placeholder='Create a password')
                    button.py-3.mt-4.btn.btn-lg.btn-success.btn-block(type='submit') Sign up for OurApp