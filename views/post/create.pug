extends ../master

block content
    include ../partials/alert

    form(action='/create-post' method='POST')
        .form-group
            label.text-muted.mb-1.w-100(for='post-title')
                small Title
                input#post-title.form-control.form-control-lg.form-control-title(name='title' type='text' placeholder='' autocomplete='off' value=(inputs[0]) ? inputs[0].title : '')
                if (validationErrors && validationErrors.title)
                    +fieldError(validationErrors.title[0])
        .form-group
            label.text-muted.mb-1.w-100(for='post-body')
                small Body Content
                textarea#post-body.body-content.tall-textarea.form-control(name='body' type='text')= value=(inputs[0]) ? inputs[0].body : ''
                if (validationErrors && validationErrors.body)
                    +fieldError(validationErrors.body[0])
        button.btn.btn-primary Save New Post